# Environment Configuration for AI Code-to-API Generator

# Groq API Configuration (Required)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# GitHub API Configuration (Optional but recommended)
# Get a personal access token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# FastAPI Configuration
DEBUG=True
SECRET_KEY=your-secret-key-for-jwt-tokens-make-it-long-and-random
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload Configuration
MAX_UPLOAD_SIZE=50MB
TEMP_DIRECTORY=./temp
OUTPUT_DIRECTORY=./generated_apis

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=structured

# Agent Configuration
AGENT_MAX_ITERATIONS=15
AGENT_TIMEOUT_SECONDS=1800
AGENT_TEMPERATURE=0.1

# Security Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
BCRYPT_ROUNDS=12

# Test Configuration
TEST_COVERAGE_THRESHOLD=80
PYTEST_TIMEOUT_SECONDS=300
